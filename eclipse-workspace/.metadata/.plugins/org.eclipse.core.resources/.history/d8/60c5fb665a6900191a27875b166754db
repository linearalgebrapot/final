
class TimeTable {
	private Subject[][] schedule = new Subject[10][5]; //여기서 private Subject[][] schedule; 만 해주고
	
	TimeTable(){
		for (int i=0;i<10;i++) {
			for (int j =0;j<5;j++) {
				schedule[i][j] = new Subject();
			}
		}
		
		initialize();
	}
	
	private void initialize() { //is accessible only within the class...? //이 안에 schedule = new Subject[10][5]; 이렇게 선언한다.
		for (int i=0;i<10;i++) {
			for (int j =0;j<5;j++) {
				if (i == 3)
					this.schedule[i][j].setName("BREAK"); //4번째 수업은 쉬는시간으로 고정
				else if (i == 7)
					this.schedule[i][j].setName("LUNCH"); //8번째 수업은 점심시간으로 고정
				else
					this.schedule[i][j].setName("----");
			}
		}
	}
	
	private int getNumByDay(String day) {
		System.out.println(day.toLowerCase());
		if(day.toLowerCase().equals("mon"))
			return 0;
		else if(day.toLowerCase().equals("tue"))
			return 1;
		else if(day.toLowerCase().equals("wed"))
			return 2;
		else if(day.toLowerCase().equals("thu"))
			return 3;
		else if(day.toLowerCase().equals("fri"))
			return 4;
		else
			return -1;
	}
	
	public Subject getSchedule(String day, int period) {
		int j = 0;
		
		switch(getNumByDay(day)) {
		case 0:
			j=1;
			break;
		case 1:
			j=2;
			break;
		case 2:
			j=3;
			break;
		case 3:
			j=4;
			break;
		case 5:
			j=5;
			break;
		}
		
		return this.schedule[period-1][j-1];
	}
	
	public Subject[] getAllSubject(){
		int cnt = 0, idx = 0;
		
		for (int i=0;i<10;i++) {
			for (int j =0;j<5;j++) {
				if(schedule[i][j].getName() != "----" && schedule[i][j].getName() != "BREAK" && schedule[i][j].getName() != "LUNCH")
					cnt++;
			}
		}
		
		Subject[] result = new Subject[cnt];
		
		for (int i=0;i<10;i++) {
			for (int j =0;j<5;j++) {
				if(schedule[i][j].getName() != "----" && schedule[i][j].getName() != "BREAK" && schedule[i][j].getName() != "LUNCH") {
					result[idx] = schedule[i][j];
					idx++;
				}
			}
		}
		
		return result;
			
	}
	
	public Subject getSubjectByTitle(String title) {
		Subject returnSubject = new Subject();
		
		for (int i=0;i<10;i++) {
			for (int j =0;j<5;j++) {
				if(schedule[i][j].getName() == title)
					returnSubject = schedule[i][j];
			}
		}
		
		return returnSubject;
	}
	
	public boolean setSchedule(String day, int period, String name, String tutor, String room) {
		int j = 0;
		
		switch(getNumByDay(day)) {
		case 0:
			j=1;
			break;
		case 1:
			j=2;
			break;
		case 2:
			j=3;
			break;
		case 3:
			j=4;
			break;
		case 5:
			j=5;
			break;
		}
		System.out.println(j);
		
		if ((period-1 != 3) && (period-1 != 7)) {
			System.out.println((period-1) + " " + (j-1));
			this.schedule[period-1][j-1].setName(name);
			this.schedule[period-1][j-1].setTutor(tutor);
			this.schedule[period-1][j-1].setRoom(room);
			return true;
		}
		
		else
			return false;
	}
	
	public void printTimeTable() {
//		String result = String.format("  %12s%12s%12s%12s%12s\n", "MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY");
//		
//		for (int i=0;i<10;i++) {
//			result += String.format("%2d", i+1);
//			for (int j =0;j<5;j++) {
//				String tempName = this.schedule[i][j].getName();
//				if (tempName.length() > 9)
//					tempName = tempName.substring(0, 9);
//					
//				result += String.format("%12s", tempName);
//			}
//			result += String.format("\n");
//		}
		
		System.out.printf("\tMON\tTUE\tWED\tTHU\tFRI\n");
		for (int i=0;i<10;i++) {
			System.out.printf("%2d\t", i+1);
			for (int j =0;j<5;j++) {
				System.out.printf("%s\t", this.schedule[i][j].getName());

			}
			System.out.println();
		}
		
		//return result;
	}
}