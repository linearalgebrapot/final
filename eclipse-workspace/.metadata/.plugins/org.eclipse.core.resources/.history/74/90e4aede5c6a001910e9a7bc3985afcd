
public class TempDist {
	public Point[] pointSet;
	public int domain;
	
	public TempDist(int domain) {
		this.domain = domain;
		pointSet = new Point[domain];
		
		for(int i=0;i<pointSet.length;i++)
			pointSet[i] = new Point();
		
		simulateDist();
	}
	
	public void simulateDist() {
		for(int i=0;i<pointSet.length;i++) {
			pointSet[i].x = i;
			pointSet[i].y = (double)1/domain;
			
			//System.out.println("(" + pointSet[i].x + ", " + pointSet[i].y + ")");
		}
	}
	
	public double getMean() {
		double mean = 0;
		
		for(int i=0;i<pointSet.length;i++) {
			mean =  mean + i*pointSet[i].y;
		}
		
		return mean;
	}
	
	public double getFirstMoment() {
		double mean = 0;
		
		for(int i=0;i<pointSet.length;i++) {
			mean =  mean + i*pointSet[i].y;
		}
		
		return mean;
	}
	
	public double getSecondMoment() {
		double average = 0;
		
		for(int i=0;i<pointSet.length;i++) {
			average = average + i*i*pointSet[i].y;
		}
		
		return average;
	}
	
	public double getVariance() {
		return getSecondMoment() - getFirstMoment() * getFirstMoment();
	}
	
	public void showData() {
		System.out.println("Domain : 0 <= x <= " + (domain-1));
		System.out.println("Mean : " + getMean());
		System.out.println("Variance : " + getVariance());
		System.out.println("Show data : ");
		
		File file = new File("output.csv");
		
		for(int i=0;i<pointSet.length;i++) 
			System.out.println("(" + pointSet[i].x + ", " + pointSet[i].y + ")");
		
	}
}
