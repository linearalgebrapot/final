
import java.util.Scanner;

enum DAYS {
	monday, tuesday, wednesday, thursday, friday // 대소문자 무시 어떻게?
}  //예시랑 다르긴 하지만 ~~~.name()으로 String으로 바꾸고 .toLowerCase()로 소문자로 통일해서 받음. valueOf 아직 잘 모르겠다 //180512 OK valueOf 어떻게 쓰는지 모르겠음

public class TimeTableApp {


	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		TimeTable tt = new TimeTable();
		int num, num2, num3;
		
		String name, tutor, room, day;
		int period;
		boolean check;
		
		while(true) {
			mainMenu();
			num = sc.nextInt();
			sc.nextLine();
			switch(num) {
			case 1:
				System.out.print("Day : ");
				day = sc.nextLine().toUpperCase();
				System.out.print("Period : ");
				period = sc.nextInt();
				sc.nextLine();
				System.out.print("Name : ");
				name = sc.nextLine();
				System.out.print("Tutor : ");
				tutor = sc.nextLine();
				System.out.print("Room : ");
				room = sc.nextLine();
				
				check = tt.setSchedule(day.toLowerCase(), period, name, tutor, room); //OK...? 그냥 day.toLowerCase()랑 뭐가 다르지?
				
				if (check == true)
					System.out.println("Class successfully added");
				else
					System.out.println("Class was NOT successfully added");
				
				break;
			
			case 2:
				num2 = sc.nextInt();
				sc.nextLine();
				
				System.out.println("(1) At a specific period");
				System.out.println("(2) By subject title");
				
				if(num2 == 1) {
					System.out.print("Day : ");
					day = sc.nextLine().toUpperCase();
					System.out.print("Period : ");
					period = sc.nextInt();
					sc.nextLine();
					System.out.println("At that time you have");
					System.out.println(tt.getSchedule(day.toLowerCase(), period).getDetails()); //이것도 OK
				}
				
				else if(num2 == 2) {
					System.out.println("(1) Specific title");
					System.out.println("(2) View all subjects");
					num3 = sc.nextInt();
					sc.nextLine();
					
					if(num3 == 1) {
						System.out.print("Title : ");
						String tarName = sc.nextLine();
						if(tt.getSubjectByTitle(tarName) != null) 
							System.out.println(tt.getSubjectByTitle(tarName).toString());
						else
							System.out.println("It doesn't exist");
					}
					
					else if(num3 == 2) {
						Subject[] sa = tt.getAllSubject();
						
						for(int i=0;i<sa.length;i++)
							System.out.println(sa[i].toString());
					}
					else
						System.out.println("Insert 1~2");	
				}
				else
					System.out.println("Insert 1~2");
				break;
				
			case 3:
				tt.printTimeTable();
				break;
				
			case 4:
				System.out.println("Exit the application");
				sc.close();
				System.exit(0);
				
			default:
				System.out.println("Insert 1~4");	
				break;
			}
		}
	}
	public static void mainMenu() {
		System.out.println("================Main Menu================\n" + "(1) Add a class to my time table:\n" + "(2) View the class at a specific time:\n" + "(3) Print the time table:\n" + "(4) Exit the program:\n" + "==========Main Menu==========");
	}
}